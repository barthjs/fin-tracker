{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "barthjs/fin-tracker",
    "type": "project",
    "description": "Household Finance Manager",
    "homepage": "https://github.com/barthjs/fin-tracker",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "bezhansalleh/filament-language-switch": "^4.0.0",
        "filament/filament": "^4.0.18",
        "jenssegers/agent": "^2.6.4",
        "laravel/framework": "^12.30.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.7.2",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^4.1.0",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-livewire": "^4.0.1",
        "pestphp/pest-plugin-type-coverage": "^4.0.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan livewire:publish --assets",
            "@php artisan filament:upgrade"
        ],
        "lint": "pint",
        "test:type-coverage": "pest --type-coverage --compact --min=100",
        "test:unit": "pest --parallel",
        "test:lint": "pint --test",
        "test:types": "phpstan",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "bump-after-update": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
